.main-nav
	&__list
		position relative
		@extend .in
		padding-top 8px
		// padding-right 74px
		padding-bottom 10px
		padding-left 74px
		background-color #e9f8d8
		background-image linear-gradient(to top, #b3bead 0%, #fcfff4 100%)
		font-size 0
		border-radius 40px
		clearfix()
		&:before
			position absolute
			left 200px
			bottom 10px
			width 496px
			height 18px
			background transparent url('../images/general/main-nav-shadow.png') 0 0 no-repeat
	&__item
		display inline-block
		vertical-align top
		font-size 18px
		font-weight 700
		line-height 18px
		color #424646
		text-transform uppercase
	&__link
		padding 10px 14px 14px 16px
		display block
		color inherit
		text-decoration none
		&:hover
			color $color-tiffany
			text-decoration none
	&__item_active
		margin-right 20px
		background-color $color-tiffany
		border-radius 12px 12px 0 0
		.main-nav__link
			padding 10px 16px 14px 20px
			color $color-white
			text-shadow 0.5px 0.9px 1px rgba(0, 0, 0, 0.75)

.subnav
	position relative
	margin-top -10px
	background $color-tiffany
	z-index 1
	&__in
		@extend .in
		clearfix()
	&__list
		padding-left 75px
		float left
		width 688px
		font-size 0
	&__item
		border-right 2px dotted $color-white
		display inline-block
		vertical-align top
		&:last-child
			border none
	&__link
		padding-top 15px
		padding-right 20px
		padding-bottom 18px
		padding-left 18px
		display block
		background url('../images/general/subnav-active.png') 50% 0 no-repeat
		font-size 14px
		font-weight 700
		color $color-white
		text-decoration none
	&__item
		&:first-child
			.subnav__link
				background-image none
		&:last-child
			.subnav__link
				width 160px


	&__text
		margin-bottom 4px
		display inline-block
		vertical-align top
		text-decoration underline
		text-transform uppercase
	&__desc
		display block
		font-size 11px
		font-weight 400
		text-decoration none
	&__link
		&:hover
			.subnav__text
				color $color-salat
				text-decoration none
	&__button
		margin-top 17px

	&__search
		margin-top 17px
		margin-right 30px
		float right
