.product-item
	border 1px solid #cfd4bf
	margin-right 26px
	margin-bottom 42px
	padding 18px 10px
	display inline-block
	vertical-align top
	width 236px
	min-height 336px
	background-color #fff
	text-align center
	&_style-second
		margin-bottom 38px
	&:nth-child(4n)
		margin-right 0
	&:hover
		border 1px solid $color-salat

	&__title
		display inline-block
		vertical-align top
		height 55px
		font-family $calibri
		font-size 18px
		font-weight 400
		line-height 1.3
		text-decoration underline
		color #4d8dd4
		// white-space nowrap
		&:hover
			text-decoration none
	&__image
		margin-bottom 40px
		height 126px
		text-align center
		img
			max-width 100%
			height auto
	&__w
		margin-bottom 20px
		padding-left 10px
		line-height 22px
		text-align center
	&__price
		border-right 2px dotted #424646
		padding-right 12px
		display inline-block
		vertical-align top
		font-size 18px
		font-weight 400
		color #424646
	&__spinner
		margin-bottom 0
		padding-left 18px
		display inline-block
		vertical-align top
	// &__button

