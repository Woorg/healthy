.product-item
	border 1px solid #cfd4bf
	margin-right 26px
	margin-bottom 42px
	padding 20px 20px
	display inline-block
	vertical-align top
	width 236px
	height 336px
	background-color #fff
	&:nth-child(4n)
		margin-right 0
	&:hover
		border 1px solid $color-salat
	&__title
		display inline-block
		vertical-align top
		height 50px
		font-size 18px
		font-weight 400
		line-height 1.3
		text-decoration underline
		color #4d8dd4
		white-space nowrap
	&__image
		height 126px
		text-align center
		img
			max-width 100%
			height auto
	&__w
		margin-bottom 22px
		line-height 22px
		text-align center
	&__price
		border-right 2px dotted #424646
		padding-right 18px
		display inline-block
		vertical-align top
		font-size 18px
		font-weight 400
		color #424646
	&__spinner
		padding-left 18px
		display inline-block
		vertical-align top
