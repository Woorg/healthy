.header
	display block
	background $color-salat url('../images/general/header-bg.jpg') 50% 0 no-repeat
	// background-size 1920px 100% // 404px
	object-fit contain
	&__top
		padding-top 14px
		padding-bottom 14px
		background-color rgba($color-tiffany, .3)
		clearfix()
	&__in
		@extend .in
	&__logo
		padding-top 12px
		padding-left 66px
		float left
		width 202px
		font-weight 700
		font-size 18px
		line-height 1
		text-transform uppercase
		letter-spacing tracking(12)
	&__phones
		margin auto
		padding-top 12px
		padding-left 134px
		width 506px
		float left
	&__basket
		float right
		width 216px
	&__body
		padding 32px 0 66px

	// &__bottom


.phones
	font-size 18px
	font-weight 700
	line-height 1
	color $color-white
	text-transform uppercase
	text-align center
	&__phone
		border-left 2px dotted $color-white
		padding-left 12px
		letter-spacing tracking(12)
		&:first-child
			border-left none
			padding-right 12px


.basket
	color $color-white
	text-align left
	&__icon
		position relative
		margin-right 14px
		margin-left 7px
		float left
		size 45px 44px
		background-color rgba($color-white, .2)
		border-radius 50%
		&:after
			position absolute
			content ""
			top 50%
			left 50%
			margin-left -11px
			margin-top  -11px
			sprite($basket_icon)
	&__title
		margin-bottom 4px
		padding-top 2px
		font-size 14px
		font-weight 400
		color $color-white
		line-height 1
		text-transform uppercase
	&__amount
		padding-left 6px
		color $color-white
		text-align center
		line-height 1
		text-decoration underline
		&:hover
			text-decoration none

.slogan
	margin auto
	padding 31px 30px 40px
	width 610px
	vertical-align top
	background-color rgba($color-tiffany, .28)
	color $color-white
	text-align center
	text-transform uppercase

	border-radius 40px
	&__title
		position relative
		margin-bottom 16px
		padding-bottom 14px
		font-size 48px
		font-weight 700
		line-height 60px
		letter-spacing tracking(18)
		&:after
			position absolute
			bottom 0
			left 50%
			margin-left -115px
			content ""
			border-top 2px dotted $color-white
			size 230px 2px
			font-size 18px
			font-weight 400
	&__text
		font-size 18px
		font-weight 400

