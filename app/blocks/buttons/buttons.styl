.buttons
	&__w
		font-size 0

.button
	border none
	outline none
	padding 10px 10px
	display inline-block
	vertical-align top
	min-height 20px
	font-size 14px
	font-weight 700
	line-height 1
	text-decoration none
	text-transform uppercase
	border-radius 40px 40px
	transition all .1s $ease-out-sine
	&_default
		padding 10px 23px
		background $color-salat
		color #424646
		&:hover
			background darken($color-salat, 10)
	&_style-second
		padding 10px 38px
		background-color #8e64cc
		color $color-white
		font-size 18px
		&:hover
			background darken(#8e64cc, 10)

	&_style-third
		position relative
		padding-top 14px
		padding-right 24px
		padding-bottom 10px
		padding-left 58px
		background #8e64cc
		color $color-white
		&:hover
			background $color-salat
		&:after
			position absolute
			top 8px
			left 24px
			content ""
			sprite($basket_add_icon)

	&_style-four
		padding-top 12px
		padding-left 39px
		padding-bottom 11px
		padding-right 44px
		background-color #b4de3e
		font-family $calibri
		font-size 14px
		font-weight 400
		color $color-white
		&:hover
			background darken($color-salat, 10)

	&_style-five
		padding 10px 48px
		background-color #8e64cc
		color $color-white
		font-size 18px
		font-weight 400
		&:hover
			background darken(#8e64cc, 10)


