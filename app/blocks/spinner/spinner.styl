.spinner
	display inline-block
	vertical-align top
	font-size 0
	&__input
		border none
		// padding 10px
		display inline-block
		vertical-align top
		width 30px
		height 20px
		font-family $calibri
		font-size 18px
		font-weight 400
		color #424646
		text-align center

	&__buttons
		position relative
		display inline-block
		vertical-align top
		font-size 20px
		text-align center
		z-index 1
	&__button
		border 3px solid #b4de3e
		padding 0
		display inline-block
		vertical-align top
		width 20px
		height 20px
		background-color #b4de3e
		font-size 14px
		font-weight 700
		line-height 15px
		color #fff
		cursor pointer
		user-select none
		border-radius 50%
