.news
	&__w
		margin-left 33px
	&__item
		position relative
		border-bottom 2px dotted #a8adae
		margin-top 38px
		margin-left 312px
		margin-bottom 38px
		padding-bottom 38px
		font-size 14px
		color #5c5c5c
		clearfix()
		&:last-child
			border-bottom 2px dotted transparent
			margin-bottom 20px
	&__item-image
		position absolute
		top 0
		left -312px
		// margin-right 30px
		float left
		width 282px
		height 137px
		img
			display block
			max-width 100%
			height auto
			border-radius 40px 40px
	&__top
		margin-bottom 12px
		padding-top 5px
	&__item-date
		padding-right 8px
		font-weight 700
	&__item-title
		color #28acbc
		text-decoration underline
		text-transform uppercase
		&:hover
			text-decoration none
	&__item-text
		margin-bottom 12px
		color #5c5c5c
