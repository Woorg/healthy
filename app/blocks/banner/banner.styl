// .page-main__banner

.banner
	position relative
	border 1px solid #cfd4bf
	padding 19px 40px 30px 50px
	float left
	width 634px
	min-height 256px
	background-color #fff
	clearfix()
	&__image
		float left
		width 254px
		height 184px
		img
			display block
			max-width 100%
			height auto
	&__desc
		margin-left 286px
		padding-top 70px
	&__title
		margin-bottom 19px
		font-weight 400
		color #29acbc
	&__quantity
		font-size 18px
		font-weight 700
		color #404c4d
		text-transform uppercase
		color #404c4d
	&__price
		font-size 18px
		font-weight 700
		color #404c4d
	&__price-old
		text-decoration line-through
	&__price-current
		color #28acbc
	&__button
		margin-top -15px
		margin-left 119px
	&__label
		position absolute
		top 3px
		right 3px
		padding 14px 22px 19px 31px
		background #A1DF21
		font-size 36px
		font-weight 700
		font-style italic
		line-height 42px
		color $color-white
		border-radius 0 0 0 40px

