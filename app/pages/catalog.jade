include ../blocks/catalog/catalog
include ../blocks/spinner/spinner
include ../blocks/subscribe/subscribe
include ../blocks/seo-text/seo-text
include ../blocks/footer/footer


block head
	- var pageTitle = 'healphy.ru - каталог';

block content
	+header()
	+main()._inner
		+b.page-row
			+e.in
				+breadcrumbs()
					+e('ul').list
						+e('li').item
							+e('a').link(href='#link') Главная
							| -
						+e('li').item
							+e('strong').link(href='#link') Каталог
		+b.page-row
			+e.in
				+catalog()
					+b('h2').row-title._style-second <span>каталог продукции</span>

					+e('p').description Мы собрали для вас лучшие товары для здорового образа жизни, питания и красоты. В каталоге вы можете найти продукцию лучших пчеловодств и<br/> фермерств России, полезные пищевые добавки и потрясающую уходовую косметику.Для связи с администрацией магазина используйте сервис<br/> <a class='catalog__desc-link' href='#feedback'>Обратной связи</a> или звоните по телефону <a class='catalog__desc-phone' href='tel=+88124596977'>+ 7 (812) 459-69-77</a>

					+e.w
						+b.catalog-item
							+e.image
								+e('a')(href='#link')
									+e('img')(src='assets/images/content/product-5.jpg' alt='product')
							+e('a').title(href='#link') <span>PRO PORCIA</span>

							+e('p').text Современное микробиомное питание<br/> для разумного снижения веса

						+b.catalog-item
							+e.image
								+e('a')(href='#link')
									+e('img')(src='assets/images/content/product-6.jpg' alt='product')
							+e('a').title(href='#link') <span>CLARUS</span>

							+e('p').text Премиальные продукты из экологически<br/> чистого Овса и других злаков, <br/> выращенных на Алтае

						+b.catalog-item
							+e.image
								+e('a')(href='#link')
									+e('img')(src='assets/images/content/product-7.jpg' alt='product')
							+e('a').title(href='#link') <span>ПРОДУКЦИЯ ПЧЕЛОВОДСТВА</span>

							+e('p').text Свежайший мёд, прополис и<br/> косметическая линия,<br/> нужно придумать текст.

						+b.catalog-item
							+e.image
								+e('a')(href='#link')
									+e('img')(src='assets/images/content/product-8.jpg' alt='product')
							+e('a').title(href='#link') <span>ПАНТОЛЕН</span>

							+e('p').text Уникальная биологическая добавка<br/> из пантов алтайского марала

						+b.catalog-item
							+e.image
								+e('a')(href='#link')
									+e('img')(src='assets/images/content/product-9.jpg' alt='product')
							+e('a').title(href='#link') <span>ГРЕЧЕСКАЯ ПРОДУКЦИЯ</span>

							+e('p').text Современное микробиомное питание<br/> для разумного снижения веса

						+b.catalog-item
							+e.image
								+e('a')(href='#link')
									+e('img')(src='assets/images/content/product-10.jpg' alt='product')
							+e('a').title(href='#link') <span>НАБОРЫ</span>

							+e('p').text Комплекс товаров, собранных вручную <br/> специалистами магазина<br/> Философия Здоровья




		+b.page-row._subscribe._subscribe-inner
